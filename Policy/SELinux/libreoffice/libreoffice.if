## <summary>policy for libreoffice</summary>

########################################
## <summary>
##	Execute TEMPLATE in the libreoffice domin.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`libreoffice_domtrans',`
	gen_require(`
		type libreoffice_t, libreoffice_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, libreoffice_exec_t, libreoffice_t)
')

########################################
## <summary>
##	Search libreoffice rw directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`libreoffice_search_rw_dir',`
	gen_require(`
		type libreoffice_rw_t;
	')

	allow $1 libreoffice_rw_t:dir search_dir_perms;
	files_search_rw($1)
')

########################################
## <summary>
##	Read libreoffice rw files.
## </summary>
## <param name="domain">
