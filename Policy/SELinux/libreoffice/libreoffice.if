########################################
## <summary>
##	Execute libreoffice in the libreoffice domain, and
##	allow the specified role the libreoffice domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed to transition
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	The role to be allowed the libreoffice domain.
##	</summary>
## </param>
#
interface(`libreoffice_run',`
	gen_require(`
		type libreoffice_t;
		attribute_role libreoffice_roles;
	')

	libreoffice_domtrans($1)
	roleattribute $2 libreoffice_roles;
')

########################################
## <summary>
##	Role access for libreoffice
## </summary>
## <param name="role">
##	<summary>
##	Role allowed access
##	</summary>
## </param>
## <param name="domain">
##	<summary>
##	User domain for the role
##	</summary>
## </param>
#
interface(`libreoffice_role',`
	gen_require(`
		type libreoffice_t;
		attribute_role libreoffice_roles;
	')

	roleattribute $1 libreoffice_roles;

	libreoffice_domtrans($2)

	ps_process_pattern($2, libreoffice_t)
	allow $2 libreoffice_t:process { signull signal sigkill };
')

########################################
## <summary>
##	All of the rules required to administrate
##	an libreoffice environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`libreoffice_admin',`
	gen_require(`
		type libreoffice_t;
		type libreoffice_rw_t;
		type libreoffice_var_lib_t;
	')

	allow $1 libreoffice_t:process { ptrace signal_perms };
	ps_process_pattern($1, libreoffice_t)

	files_search_etc($1)
	admin_pattern($1, libreoffice_rw_t)

	files_search_var_lib($1)
	admin_pattern($1, libreoffice_var_lib_t)
	optional_policy(`
		systemd_passwd_agent_exec($1)
		systemd_read_fifo_file_passwd_run($1)
	')
')
