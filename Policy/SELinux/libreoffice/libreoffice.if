##	Domain allowed access.
##	</summary>
## </param>
#
interface(`libreoffice_read_rw_files',`
	gen_require(`
		type libreoffice_rw_t;
	')

	read_files_pattern($1, libreoffice_rw_t, libreoffice_rw_t)
	allow $1 libreoffice_rw_t:dir list_dir_perms;
	files_search_rw($1)
')

